<div class="custom-product-layout">
  <div class="product-wrapper">
    <!-- Left: Product Gallery -->
    <div class="product-gallery">
      {% if product.media.size > 0 %}
        <div class="media-thumbnails">
          {% for media in product.media %}
            <div class="thumb">
              {{ media | image_url: width: 100 | image_tag }}
            </div>
          {% endfor %}
        </div>
        <div class="main-media">
          {{ product.featured_image | image_url: width: 600 | image_tag }}
        </div>
      {% endif %}
    </div>

    <!-- Right: Product Info -->
    <div class="product-details">
      <h2 class="product-title">{{ product.title }}</h2>
      <div class="vendor">{{ product.vendor }}</div>

      <div class="price">Rs. {{ product.price | money }}</div>
      <div class="sku">Model No : {{ product.selected_or_first_available_variant.sku }}</div>

      <div class="action-icons">
        <button>Request to call</button>
        <button>Whatsapp</button>
        <button>Add to compare</button>
        <button>Share</button>
      </div>

      <div class="specifications">
        <h3>Specification</h3>
        <table>
          <tr><td>Purity</td><td>{{ section.settings.purity }}</td></tr>
          <tr><td>Net WT</td><td>{{ section.settings.net_wt }}</td></tr>
          <tr><td>Gross WT</td><td>{{ section.settings.gross_wt }}</td></tr>
          <tr><td>STN. WT</td><td>{{ section.settings.stn_wt }}</td></tr>
          <tr><td>DIA WT</td><td>{{ section.settings.dia_wt }}</td></tr>
        </table>
      </div>

      <!-- Newly Added Solid Square Buttons -->
      <div class="square-buttons">
        <button class="square-btn">ðŸ“ž</button>
        <button class="square-btn">ðŸ’¬</button>
        <button class="square-btn">ðŸ”—</button>
      </div>

      <div class="buy-buttons">
        <button class="buy-now">Buy Now</button>
        <form method="post" action="/cart/add">
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          <button type="submit" class="add-to-cart">Add to Cart</button>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
  .custom-product-layout {
    padding: 40px 20px;
    max-width: 1400px;
    margin: auto;
    font-family: 'DM Sans', sans-serif;
  }
  .product-wrapper {
    display: flex;
    gap: 40px;
    flex-wrap: wrap;
  }
  .product-gallery {
    flex: 1 1 45%;
  }
  .media-thumbnails {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-bottom: 16px;
  }
  .thumb img {
    border: 1px solid #ddd;
    max-width: 80px;
  }
  .main-media img {
    max-width: 100%;
    border: 1px solid #ccc;
  }
  .product-details {
    flex: 1 1 50%;
  }
  .product-title {
    font-size: 24px;
    font-weight: bold;
    font-family: 'DM Serif Display', serif;
  }
  .vendor {
    font-size: 14px;
    color: #555;
    margin-bottom: 10px;
  }
  .price {
    font-size: 22px;
    font-weight: 700;
    margin: 10px 0;
  }
  .sku {
    font-size: 13px;
    color: #777;
  }
  .action-icons {
    display: flex;
    gap: 10px;
    margin: 16px 0;
    flex-wrap: wrap;
  }
  .action-icons button {
    background: #f7f7f7;
    padding: 8px 12px;
    border: 1px solid #ccc;
    cursor: pointer;
  }
  .specifications h3 {
    font-weight: 700;
    margin-bottom: 10px;
    text-transform: uppercase;
  }
  .specifications table {
    width: 100%;
    border-collapse: collapse;
    font-size: 14px;
  }
  .specifications td {
    padding: 6px 0;
  }
  .specifications td:first-child {
    font-weight: 600;
  }
  .square-buttons {
    display: flex;
    gap: 12px;
    margin-top: 20px;
  }
  .square-btn {
    width: 48px;
    height: 48px;
    background-color: #000;
    color: #fff;
    font-size: 20px;
    border: none;
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
  }
  .buy-buttons {
    margin-top: 20px;
    display: flex;
    gap: 10px;
  }
  .buy-now {
    background: white;
    border: 1px solid black;
    padding: 12px 20px;
    font-weight: bold;
    cursor: pointer;
  }
  .add-to-cart {
    background: #1a3f2b;
    color: white;
    border: none;
    padding: 12px 20px;
    font-weight: bold;
    cursor: pointer;
  }
</style>

{% schema %}
{
  "name": "Custom Product Layout",
  "settings": [
    {
      "type": "text",
      "id": "purity",
      "label": "Purity",
      "default": "18KT"
    },
    {
      "type": "text",
      "id": "net_wt",
      "label": "Net Weight",
      "default": "23.36 GMS"
    },
    {
      "type": "text",
      "id": "gross_wt",
      "label": "Gross Weight",
      "default": "25.82 GMS"
    },
    {
      "type": "text",
      "id": "stn_wt",
      "label": "Stone Weight",
      "default": "7.21 CTS"
    },
    {
      "type": "text",
      "id": "dia_wt",
      "label": "Diamond Weight",
      "default": "5.11 CTS"
    }
  ]
}
{% endschema %}
