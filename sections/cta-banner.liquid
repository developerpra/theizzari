<div class="cta-banner-full-bg">
  <div class="cta-banner-inner">
    <div class="cta-content">
      <h2 class="cta-heading">{{ section.settings.heading }}</h2>
      <p class="cta-subheading">{{ section.settings.subheading }}</p>
      <a href="{{ section.settings.button_link }}" class="cta-button">
        {{ section.settings.button_label }}
      </a>
    </div>

    <div class="cta-images">
      {% if section.settings.image_left != blank %}
        <div class="cta-image">
          <img src="{{ section.settings.image_left | image_url: width: 600 }}" alt="Left Image">
        </div>
      {% endif %}
      {% if section.settings.image_right != blank %}
        <div class="cta-image">
          <img src="{{ section.settings.image_right | image_url: width: 600 }}" alt="Right Image">
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .cta-banner-full-bg {
    background-color: #f9f9f9;
    padding: 50px 0;
  }

  .cta-banner-inner {
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    font-family: 'DM Sans', sans-serif;
  }

  .cta-content {
    flex: 1 1 40%;
    max-width: 500px;
  }

  .cta-heading {
    font-size: 48px;
    font-weight: bold;
    font-family: 'DM Serif Display', serif;
    margin-bottom: 16px;
  }

  .cta-subheading {
    font-size: 16px;
    color: #333;
    margin-bottom: 24px;
  }

  .cta-button {
    display: inline-block;
    padding: 12px 20px;
    background-color: #1a3f2b;
    color: white;
    text-decoration: none;
    font-weight: 600;
    border-radius: 6px;
  }

  .cta-images {
    flex: 1 1 50%;
    display: flex;
    flex-direction: row;
    gap: 20px;
    justify-content: center;
    align-items: center;
    flex-wrap: nowrap;
  }

  .cta-image {
    flex: 1 1 50%;
  }

  .cta-image img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 6px;
    object-fit: cover;
  }

  @media screen and (max-width: 768px) {
    .cta-banner-inner {
      flex-direction: column;
      text-align: center;
    }

    .cta-content {
      max-width: 100%;
    }

    .cta-images {
      flex-direction: column;
      margin-top: 30px;
    }

    .cta-image {
      width: 100%;
    }

    .cta-heading {
      font-size: 36px;
    }
  }
</style>


{% schema %}
{
  "name": "CTA Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Live In Glamour"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Reach the perfect glamour style with our exclusive jewelry collections."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "image_left",
      "label": "Left Image"
    },
    {
      "type": "image_picker",
      "id": "image_right",
      "label": "Right Image"
    }
  ],
  "presets": [
    {
      "name": "CTA Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}
