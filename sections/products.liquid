<div class="custom-product-layout">
  <div class="product-wrapper">
    <!-- Left: Product Gallery -->
    <div class="product-gallery">
      {% if product.media.size > 0 %}
        <div class="media-thumbnails">
          {% for media in product.media %}
            <div class="thumb">
              {{ media | image_url: width: 100 | image_tag }}
            </div>
          {% endfor %}
        </div>
        <div class="main-media">
          {{ product.featured_image | image_url: width: 600 | image_tag }}
        </div>
      {% endif %}
    </div>

    <!-- Right: Product Info -->
    <div class="product-details" style="position: relative;">
      <!-- Wishlist Icon -->
      <button class="wishlist-btn" id="wishlistBtn" aria-label="Add to wishlist" style="position: absolute; top: 0; right: 0; background: none; border: none; cursor: pointer;">
        <svg id="wishlistHeart" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#1a1a1a" stroke-width="2" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 21s-6.5-5.2-8.5-8.1C1.1 10.1 2.1 7.6 4.6 6.7c1.5-.5 3.1.1 4.1 1.3C9.9 7.1 11.1 6.5 12.5 6.7c2.5.9 3.5 3.4 1.1 6.2C18.5 15.8 12 21 12 21z"/>
        </svg>
      </button>
      <h2 class="product-title" style="padding-right: 40px;">{{ product.title }}</h2>
      <div class="vendor">{{ product.vendor }}</div>

      <div class="price">Rs. {{ product.price | money }}</div>
      <div class="sku">Model No : {{ product.selected_or_first_available_variant.sku }}</div>

      <div class="action-icons">
        <button>Request to call</button>
        <button>Whatsapp</button>
        <button>Add to compare</button>
        <button>Share</button>
      </div>

      <div class="specifications">
        <h3>Specification</h3>
        <table>
          <tr><td>Purity</td><td>{{ section.settings.purity }}</td></tr>
          <tr><td>Net WT</td><td>{{ section.settings.net_wt }}</td></tr>
          <tr><td>Gross WT</td><td>{{ section.settings.gross_wt }}</td></tr>
          <tr><td>STN. WT</td><td>{{ section.settings.stn_wt }}</td></tr>
          <tr><td>DIA WT</td><td>{{ section.settings.dia_wt }}</td></tr>
        </table>
      </div>

      <div class="buy-buttons" style="display: flex; gap: 16px; margin-top: 24px;">
        <button class="buy-now" style="background: #fff; color: #1a1a1a; border: 1px solid #1a1a1a; flex: 1;">Buy Now</button>
        <form method="post" action="/cart/add" style="flex: 1;">
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          <button type="submit" class="add-to-cart" style="width: 100%;">Add to Cart</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var wishlistBtn = document.getElementById('wishlistBtn');
    var heart = document.getElementById('wishlistHeart');
    var isActive = false;
    wishlistBtn.addEventListener('click', function() {
      isActive = !isActive;
      if (isActive) {
        heart.setAttribute('fill', '#2d5a3d');
        heart.setAttribute('stroke', '#2d5a3d');
      } else {
        heart.setAttribute('fill', 'none');
        heart.setAttribute('stroke', '#1a1a1a');
      }
      // Optionally, send AJAX to update wishlist on server
    });
  });
</script>

<style>
  .custom-product-layout {
    padding: 40px 20px;
    max-width: 1400px;
    margin: auto;
    font-family: 'DM Sans', sans-serif;
  }
  .product-wrapper {
    display: flex;
    gap: 40px;
    flex-wrap: wrap;
  }
  .product-gallery {
    flex: 1 1 45%;
  }
  .media-thumbnails {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-bottom: 16px;
  }
  .thumb img {
    border: 1px solid #ddd;
    max-width: 80px;
  }
  .main-media img {
    max-width: 100%;
    border: 1px solid #ccc;
  }
  .product-details {
    flex: 1 1 50%;
    position: relative;
  }
  .wishlist-btn {
    position: absolute;
    top: 0;
    right: 0;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 2;
    padding: 8px;
  }
  .wishlist-btn svg {
    transition: fill 0.2s, stroke 0.2s;
  }
  .product-title {
    font-size: 24px;
    font-weight: bold;
    font-family: 'DM Serif Display', serif;
    padding-right: 40px;
  }
  .vendor {
    font-size: 14px;
    color: #555;
    margin-bottom: 10px;
  }
  .price {
    font-size: 22px;
    font-weight: 700;
    margin: 10px 0;
  }
  .sku {
    font-size: 13px;
    color: #777;
  }
  .action-icons {
    display: flex;
    gap: 10px;
    margin: 16px 0;
    flex-wrap: wrap;
  }
  .action-icons button {
    background: #f7f7f7;
    padding: 8px 12px;
    border: 1px solid #ccc;
    cursor: pointer;
  }
  .specifications h3 {
    font-weight: 700;
    margin-bottom: 10px;
    text-transform: uppercase;
  }
  .specifications table {
    width: 100%;
    border-collapse: collapse;
    font-size: 14px;
  }
  .specifications td {
    padding: 6px 0;
  }
  .specifications td:first-child {
    font-weight: 600;
  }
  .buy-buttons {
    margin-top: 20px;
    display: flex;
    gap: 16px;
  }
  .buy-now {
    background: white;
    border: 1px solid #1a1a1a;
    color: #1a1a1a;
    padding: 12px 20px;
    font-weight: bold;
    cursor: pointer;
    flex: 1;
    transition: background 0.2s, color 0.2s;
  }
  .buy-now:hover {
    background: #f7f7f7;
  }
  .add-to-cart {
    background: #1a3f2b;
    color: white;
    border: none;
    padding: 12px 20px;
    font-weight: bold;
    cursor: pointer;
    width: 100%;
    flex: 1;
    transition: background 0.2s;
  }
  .add-to-cart:hover {
    background: #2d5a3d;
  }
</style>

{% schema %}
{
  "name": "Custom Product Layout",
  "settings": [
    {
      "type": "text",
      "id": "purity",
      "label": "Purity",
      "default": "18KT"
    },
    {
      "type": "text",
      "id": "net_wt",
      "label": "Net Weight",
      "default": "23.36 GMS"
    },
    {
      "type": "text",
      "id": "gross_wt",
      "label": "Gross Weight",
      "default": "25.82 GMS"
    },
    {
      "type": "text",
      "id": "stn_wt",
      "label": "Stone Weight",
      "default": "7.21 CTS"
    },
    {
      "type": "text",
      "id": "dia_wt",
      "label": "Diamond Weight",
      "default": "5.11 CTS"
    }
  ]
}
{% endschema %}