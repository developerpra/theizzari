  }
  
  .section-heading {
    font-size: 1.75rem;
    margin-bottom: 32px;
  }
  
  .collection-card {
    flex: 0 0 240px;
  }
  
  .collection-image {
    height: 280px;
  }
  
  .collection-content {
    padding: 20px 16px;
  }
  
  .collection-title {
    font-size: 1.125rem;
    margin-bottom: 10px;
  }
  
  .collection-description {
    font-size: 0.9rem;
    margin-bottom: 20px;
  }
  
  .collection-btn {
    padding: 8px 16px;
    font-size: 0.8rem;
  }
  
  .collections-container {
    gap: 16px;
    padding-bottom: 16px;
  }
  
  .nav-btn {
    width: 36px;
    height: 36px;
  }
  
  .nav-btn-left {
    left: -18px;
  }
  
  .nav-btn-right {
    right: -18px;
  }
}

/* Extra Small Mobile (up to 375px) */
@media (max-width: 375px) {
  .signature-styles-section {
    padding: 25px 10px;
  }
  
  .section-heading {
    font-size: 1.5rem;
    margin-bottom: 28px;
  }
  
  .collection-card {
    flex: 0 0 220px;
  }
  
  .collection-image {
    height: 260px;
  }
  
  .collection-content {
    padding: 18px 14px;
  }
  
  .collection-title {
    font-size: 1rem;
  }
  
  .collection-description {
    font-size: 0.85rem;
    line-height: 1.5;
  }
  
  .collection-btn {
    padding: 8px 14px;
    font-size: 0.75rem;
  }
  
  .nav-btn {
    width: 32px;
    height: 32px;
  }
  
  .nav-btn svg {
    width: 18px;
    height: 18px;
  }
  
  .nav-btn-left {
    left: -16px;
  }
  
  .nav-btn-right {
    right: -16px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const container = document.getElementById('collectionsContainer');
  const leftBtn = document.getElementById('navLeft');
  const rightBtn = document.getElementById('navRight');
  
  if (container && leftBtn && rightBtn) {
    leftBtn.addEventListener('click', function() {
      container.scrollBy({
        left: -320,
        behavior: 'smooth'
      });
    });
    
    rightBtn.addEventListener('click', function() {
      container.scrollBy({
        left: 320,
        behavior: 'smooth'
      });
    });
  }
});
</script>

