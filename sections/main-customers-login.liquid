<h1>{{ 'customer.login.title' | t }}</h1>
<p>{{ 'customer.login.subtitle' | t }}</p>

{% form 'customer_login' %}
  <label for="CustomerEmail">{{ 'customer.login.email' | t }}</label>
  <input id="CustomerEmail" name="customer[email]" type="email" required placeholder="eg abc@abc.com" />

  <label for="CustomerPassword">{{ 'customer.login.password' | t }}</label>
  <input id="CustomerPassword" name="customer[password]" type="password" required />

  <input id="RememberMe" name="remember" type="checkbox" />
  <label for="RememberMe">{{ 'customer.login.remember_me' | t }}</label>

  <a href="/account/recover">{{ 'customer.login.forgot' | t }}</a>

  <input type="submit" value="{{ 'customer.login.sign_in' | t }}">
{% endform %}

<div>
  <p>{{ 'customer.login.or' | t }}</p>
  <a href="#google"><img src="google-icon.png" alt="Login with Google"></a>
  <a href="#apple"><img src="apple-icon.png" alt="Login with Apple"></a>
</div>

<p>{{ 'customer.login.no_account' | t }}</p>
<a href="/account/register">{{ 'customer.login.sign_up' | t }}</a>
