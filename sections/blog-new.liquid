  background-color: #000;
  color: #fff;
  padding: 0.75rem 1.5rem;
  font-weight: 600;
  border: none;
  cursor: pointer;
}
.journal-right {
  flex: 1;
  text-align: right;
  min-width: 300px;
}
.blog-tabs {
  margin-top: 3rem;
}
.blog-filter-tabs {
  display: flex;
