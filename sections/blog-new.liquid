<div class="blog-hero-wrap section-spacing">
  <div class="page-width blog-header">
    <div class="journal-left">
      <h2 class="journal-heading">The Izzari Journal</h2>
      <form method="post" action="/contact#contact_form" accept-charset="UTF-8" class="newsletter-form" name="contact">
        <input type="hidden" name="form_type" value="customer">
        <input type="hidden" name="utf8" value="✓">
        <input type="email" name="contact[email]" class="newsletter-input" placeholder="E-Mail" required>
        <button type="submit" class="newsletter-button">Subscribe</button>
      </form>
    </div>
    <div class="journal-right">
      <p class="journal-description">
        Style. Stones. Stories. A space where jewelry meets culture, craft, and expression.
      </p>
    </div>
  </div>

  <div class="page-width blog-tabs">
    <ul class="blog-filter-tabs">
      <li><a href="/blogs/news" class="active">View All</a></li>
      <li><a href="/blogs/news/tagged/styling">Styling</a></li>
      <li><a href="/blogs/news/tagged/craftsmanship">Craftsmanship</a></li>
      <li><a href="/blogs/news/tagged/gifting">Gifting</a></li>
      <li><a href="/blogs/news/tagged/bridal">Bridal</a></li>
      <li><a href="/blogs/news/tagged/behind-the-scenes">Behind The Scenes</a></li>
      <li><a href="/blogs/news/tagged/trends">Trends</a></li>
    </ul>
  </div>

  <div class="page-width blog-grid">
    {% paginate blog.articles by 4 %}
      <div class="grid">
        {% for article in blog.articles %}
          <div class="blog-card">
            <a href="{{ article.url }}">
              {% if article.image %}
                <img src="{{ article.image | img_url: '720x' }}" alt="{{ article.title }}">
              {% endif %}
              <h3 class="blog-title">{{ article.title }}</h3>
              <p class="blog-excerpt">{{ article.excerpt | strip_html | truncate: 120 }}</p>
              <span class="blog-read-more">Read More →</span>
            </a>
          </div>
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <div class="load-more-wrap">
          {{ paginate | default_pagination: next: 'Load More' }}
        </div>
      {% endif %}
    {% endpaginate %}
  </div>
</div>

<style>
