  list-style: none;
  padding: 0;
  border-bottom: 1px solid #eee;
}
.blog-filter-tabs a {
  text-decoration: none;
  color: #000;
  padding-bottom: 0.5rem;
  font-weight: 500;
}
.blog-filter-tabs a.active {
