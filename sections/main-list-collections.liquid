<style>
  #shopify-section-{{ section.id }} {
    --collection-list-items-per-row: {{ section.settings.collections_per_row_mobile | times: 1 }};
    --collection-list-gap: 1.5rem;
  }

  @media screen and (min-width: 700px) {
    #shopify-section-{{ section.id }} {
      --collection-list-items-per-row: {{ 2 | at_most: section.settings.collections_per_row_desktop }};
    }
  }

  @media screen and (min-width: 1150px) {
    #shopify-section-{{ section.id }} {
      --collection-list-items-per-row: {{ section.settings.collections_per_row_desktop }};
      --collection-list-gap: 1.875rem;
    }
  }

  /* Load More Button Styles */
  .load-more-container {
    text-align: center;
    margin-top: 3rem;
    padding: 2rem 0;
  }

  .load-more-button {
    min-width: 200px;
    padding: 1rem 2rem;
    font-size: 1rem;
    font-weight: 500;
    background-color: #264B3B;
    color: #ffffff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
  }

  .load-more-button:hover:not(:disabled) {
    background-color: #1e3a2d;
    transform: translateY(-2px);
  }

  .load-more-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .load-more-info {
    margin-top: 1rem;
    font-size: 0.875rem;
    color: #666;
  }

  .spinner {
    width: 20px;
    height: 20px;
    animation: rotate 2s linear infinite;
    vertical-align: middle;
  }

  .spinner-path {
    stroke: currentColor;
    stroke-linecap: round;
    animation: dash 1.5s ease-in-out infinite;
  }

  @keyframes rotate {
    100% {
      transform: rotate(360deg);
    }
  }

  @keyframes dash {
    0% {
      stroke-dasharray: 1, 150;
      stroke-dashoffset: 0;
    }
    50% {
      stroke-dasharray: 90, 150;
      stroke-dashoffset: -35;
    }
    100% {
      stroke-dasharray: 90, 150;
      stroke-dashoffset: -124;
    }
  }
</style>

