{%- assign color_scheme_hash = section.settings.color_scheme.settings.background_gradient | default: section.settings.color_scheme.settings.background | md5 -%}

<div class="section-spacing section-spacing--tight color-scheme color-scheme--{{ section.settings.color_scheme.id }} color-scheme--bg-{{ color_scheme_hash }}">
  {%- if collections.size == 0 -%}
    <div class="container container--xs">
      <div class="empty-state">
        <div class="prose">
          <h1 class="h4">{{ 'collection.general.all_collections' | t }}</h1>
          <p>{{ 'collection.general.no_collections' | t }}</p>

          {%- assign button_content = 'collection.general.continue_shopping' | t -%}
          {%- render 'button', content: button_content, href: routes.root_url -%}
        </div>
      </div>
    </div>
  {%- else -%}
    <div class="container">
      <div class="section-stack">
        {%- if section.settings.show_title -%}
          <div class="section-header justify-self-center text-center">
            {%- if request.page_type == 'list-collections' -%}
              <h1 class="h2">{{ 'collection.general.all_collections' | t }}</h1>
            {%- else -%}
              <h1 class="h2">{{ page.title }}</h1>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- paginate collections by 48 -%}
          <div class="v-stack gap-6 sm:gap-8">
            <div class="collection-list wrap">
              {%- assign collections_to_show = section.settings.collections | default: collections -%}

              {%- for collection in collections_to_show -%}
                {%- if collection.featured_image == blank or section.settings.collections == empty and collection.handle == 'frontpage' -%}
                  {%- continue -%}
                {%- endif -%}

                <a href="{{ collection.url }}" class="collection-card group">
                  <div class="content-over-media content-over-media--{{ section.settings.image_size }}" style="--content-over-media-overlay: {{ section.settings.overlay_color.rgb }} / {{ section.settings.overlay_opacity | divided_by: 100.0 }};">
                    {%- capture sizes -%}(max-width: 699px) 100vw, (max-width: 1149px) {{ 100 | divided_by: section.settings.collections_per_row_desktop | at_least: 50 }}vw, {{ 100 | divided_by: section.settings.collections_per_row_desktop }}vw{%- endcapture -%}

                    {%- assign loading_strategy = nil -%}

                    {%- if forloop.index > 3 -%}
                      {%- assign loading_strategy = 'lazy' -%}
                    {%- endif -%}

                    {{- collection.featured_image | image_url: width: collection.featured_image.width | image_tag: loading: loading_strategy, sizes: sizes, widths: '200,300,400,500,600,800,1000,1200,1400,1600,1800,2000,2200,2400', class: 'zoom-image group-hover:zoom', draggable: 'false' -}}

                    <div class="collection-card__content prose prose--tight {{ section.settings.content_position }}" style="{% render 'surface', text_color: section.settings.text_color %}">
                      <p class="h3">{{ collection.title }}</p>
                    </div>
                  </div>
                </a>
              {%- endfor -%}
            </div>

            {%- if section.settings.collections == empty -%}
              {%- comment -%} Load More Button for Collections {%- endcomment -%}
              {%- if paginate.pages > 1 -%}
                <div class="load-more-container" data-load-more>
                  <button 
                    type="button" 
                    class="load-more-button button button--primary"
                    data-load-more-button
                    data-next-url="{{ paginate.next.url }}"
                    {% unless paginate.next %}disabled{% endunless %}
                  >
                    <span class="load-more-text">{{ 'collection.load_more.button_label' | t | default: 'Load More' }}</span>
                    <span class="load-more-spinner" style="display: none;">
                      <svg class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                        <circle class="spinner-path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                      </svg>
                    </span>
                  </button>
                  
                  <div class="load-more-info">
                    <span class="collections-shown">
                      Showing {{ paginate.current_offset | plus: paginate.items }} of {{ paginate.items_count }} collections
                    </span>
                  </div>
                </div>
              {%- endif -%}
            {%- endif -%}
          </div>
        {%- endpaginate -%}
      </div>
    </div>
  {%- endif -%}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const loadMoreContainer = document.querySelector('[data-load-more]');
    const loadMoreButton = document.querySelector('[data-load-more-button]');
    const collectionList = document.querySelector('.collection-list');
    
    if (!loadMoreButton || !collectionList) return;
    
    loadMoreButton.addEventListener('click', async function() {
      const nextUrl = this.dataset.nextUrl;
      if (!nextUrl || this.disabled) return;
      
      // Show loading state
      this.disabled = true;
      this.querySelector('.load-more-text').style.display = 'none';
      this.querySelector('.load-more-spinner').style.display = 'inline-block';
      
      try {
        const response = await fetch(nextUrl);
        const html = await response.text();
        
        // Parse the response
        const parser = new DOMParser();
        const newDocument = parser.parseFromString(html, 'text/html');
        
        // Get new collections
        const newCollections = newDocument.querySelectorAll('.collection-list > *');
        
        // Append new collections
        newCollections.forEach(collection => {
          collectionList.appendChild(collection.cloneNode(true));
        });
        
        // Update load more button
        const newLoadMoreContainer = newDocument.querySelector('[data-load-more]');
        if (newLoadMoreContainer) {
          const newButton = newLoadMoreContainer.querySelector('[data-load-more-button]');
          const newInfo = newLoadMoreContainer.querySelector('.load-more-info');
          
          if (newButton && newButton.dataset.nextUrl) {
            this.dataset.nextUrl = newButton.dataset.nextUrl;
            this.disabled = false;
          } else {
            // No more collections
            this.style.display = 'none';
          }
          
          // Update collection count
          if (newInfo) {
            loadMoreContainer.querySelector('.load-more-info').innerHTML = newInfo.innerHTML;
          }
        } else {
          // No more collections
          this.style.display = 'none';
        }
        
      } catch (error) {
        console.error('Error loading more collections:', error);
        this.disabled = false;
      } finally {
        // Hide loading state
        this.querySelector('.load-more-text').style.display = 'inline';
        this.querySelector('.load-more-spinner').style.display = 'none';
      }
    });
  });
</script>

