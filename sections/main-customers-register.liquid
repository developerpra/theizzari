<h1>{{ 'customer.register.title' | t }}</h1>

{% form 'create_customer' %}
  <label for="FirstName">{{ 'customer.register.name' | t }}</label>
  <input id="FirstName" name="customer[first_name]" required>

  <label for="Email">{{ 'customer.register.email' | t }}</label>
  <input id="Email" name="customer[email]" type="email" required>

  <label for="Password">{{ 'customer.register.password' | t }}</label>
  <input id="Password" name="customer[password]" type="password" required>

  <label for="Confirm">{{ 'customer.register.confirm' | t }}</label>
  <input id="Confirm" name="customer[confirm]" type="password" required>

  <input id="Agree" name="agree" type="checkbox" required>
  <label for="Agree">{{ 'customer.register.agree' | t }}</label>

  <input type="submit" value="{{ 'customer.register.sign_up' | t }}">
{% endform %}

<div>
  <p>{{ 'customer.register.or' | t }}</p>
  <a href="#google"><img src="google-icon.png" alt="Login with Google"></a>
  <a href="#apple"><img src="apple-icon.png" alt="Login with Apple"></a>
</div>

<p>{{ 'customer.register.already' | t }}</p>
<a href="/account/login">{{ 'customer.register.sign_in' | t }}</a>
  