{%- style -%}
  .auth-container {
    display: flex;
    min-height: 100vh;
    background: #ffffff;
    justify-content: space-between;
  }

  .auth-form-section {
    flex: 0.4;
    max-width: 40%;
    padding: 48px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .auth-image-section {
    flex: 0.6;
    display: flex;
    justify-content: center;
    overflow: hidden;
  }
  .auth-image-section .image-wrapper {
    margin-top: 3rem;
    max-height: 600px;
    width: 100%;
    max-width: 900px;
    border-radius: 1rem;
    overflow: hidden;
  }

  .auth-image-section img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .auth-logo {
    margin-bottom: 40px;
  }

  .auth-logo img {
    height: 32px;
  }

  .auth-header {
    margin-bottom: 32px;
  }

  .auth-header h1 {
    font-size: 32px;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0 0 8px;
  }

  .auth-header p {
    color: #666;
    font-size: 16px;
    margin: 0;
  }

  .auth-form {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .form-group label {
    font-size: 14px;
    font-weight: 500;
    color: #1a1a1a;
  }

  .form-group input[type="text"],
  .form-group input[type="email"],
  .form-group input[type="password"] {
    padding: 12px 16px;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    font-size: 16px;
    transition: all 0.2s;
  }

  .form-group input:focus {
    outline: none;
    border-color: #2d5a3d;
    box-shadow: 0 0 0 2px rgba(45, 90, 61, 0.1);
  }

  .form-checkbox {
    display: flex;
    align-items: center;
    gap: 8px;
    margin: 8px 0;
  }

  .form-checkbox input[type="checkbox"] {
    width: 18px;
    height: 18px;
    border: 2px solid #e0e0e0;
    border-radius: 4px;
  }

  .form-checkbox label {
    font-size: 14px;
    color: #666;
  }

  .forgot-password {
    text-align: right;
    margin-top: -16px;
  }

  .forgot-password a {
    color: #2d5a3d;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
  }

  .forgot-password a:hover {
    text-decoration: underline;
  }

  .auth-button {
    background: #264B3B;
    color: white;
    border: none;
    padding: 14px;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s;
    margin-top: 8px;
  }

  .auth-button:hover {
    background: #1e3a2d;
  }

  .auth-divider {
    display: flex;
    align-items: center;
    text-align: center;
    margin: 24px 0;
    color: #666;
  }

  .auth-divider::before,
  .auth-divider::after {
    content: '';
    flex: 1;
    border-bottom: 1px solid #e0e0e0;
  }

  .auth-divider span {
    padding: 0 16px;
    font-size: 14px;
    color: #666;
  }

  .social-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    margin-bottom: 24px;
  }

  .social-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    transition: all 0.2s;
  }

  .social-button:hover {
    border-color: #2d5a3d;
  }

  .social-button img {
    width: 24px;
    height: 24px;
  }

  .auth-footer {
    text-align: center;
    margin-top: 24px;
    font-size: 14px;
    color: #666;
  }

  .auth-footer a {
    color: #2d5a3d;
    text-decoration: none;
    font-weight: 500;
  }

  .auth-footer a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .auth-container {
      flex-direction: column;
    }

    .auth-form-section {
      max-width: 100%;
      padding: 32px 24px;
    }

    .auth-image-section {
      display: none;
    }
  }
{%- endstyle -%}